{
  "name": "@_all_docs/worker",
  "version": "0.5.1",
  "description": "Multi-runtime worker for _all_docs operations",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/indexzero/_all_docs.git",
    "directory": "workers/worker"
  },
  "author": "Charlie Robbins <npm@charlie.dev>",
  "license": "Apache-2.0",
  "exports": {
    ".": "./index.js",
    "./app": "./app.js",
    "./processors": "./processors/index.js",
    "./processor": "./processor.js",
    "./interfaces": "./interfaces.js"
  },
  "dependencies": {
    "hono": "^4.0.0"
  },
  "devDependencies": {
    "unenv": "^1.9.0",
    "unbuild": "^2.0.0",
    "@hono/node-server": "^1.0.0"
  },
  "peerDependencies": {
    "@_all_docs/partition": "workspace:*",
    "@_all_docs/packument": "workspace:*",
    "@_all_docs/cache": "workspace:*",
    "@_all_docs/types": "workspace:*"
  },
  "scripts": {
    "test": "node --test test/*.test.js",
    "build": "unbuild",
    "build:cf": "unbuild --preset cloudflare",
    "build:fastly": "unbuild --preset fastly",
    "start": "node node.js",
    "start:dev": "node --watch node.js",
    "docker:build": "docker build -t all-docs-worker .",
    "docker:run": "docker run -p 8080:8080 -e RUNTIME=cloudrun all-docs-worker",
    "docker:test": "docker run -p 8080:8080 -e RUNTIME=cloudrun -d all-docs-worker && sleep 2 && curl http://localhost:8080/health"
  }
}